<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.pay_the_piper.MainActivity"
    android:background="#81f000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/randomInteger"
        android:layout_alignParentTop="true"
        android:textSize="80sp"
        android:text="Amount"
        android:gravity="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/payment"
        android:text="Pay"
        android:gravity="center"
        android:textSize="80sp"
        android:layout_below="@id/randomInteger"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1$"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/one_$"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2$"
            android:textSize="30sp"
            android:id="@+id/two_$"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:text="5$"
            android:id="@+id/five_$"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="10$"
            android:textSize="30sp"
            android:id="@+id/ten_$"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:text="Reset Payment"
        android:textSize="30sp"
        android:id="@+id/Reset_button" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@id/Reset_button"
        android:textSize="30sp"
        android:text="another payment"
        android:id="@+id/another_payment"
        />

</RelativeLayout>

